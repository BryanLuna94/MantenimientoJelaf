@{
    ViewBag.Navigation = "Home";
    ViewBag.Title = "Error 500";
}

<section class="error-page">
    <div class="error-box" style="position:relative !important;">
        <div class="error-body text-center" style="padding-top:0%">
            <h1>500</h1>
            <h3 class="text-uppercase">Error de servidor interno.</h3>
            <p class="text-muted m-t-30 m-b-30">Por favor intente después de algún tiempo.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-info btn-rounded waves-effect waves-light m-b-40">Regresar al inicio</a>
        </div>
    </div>
</section>