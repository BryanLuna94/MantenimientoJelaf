@using Mantenimiento.WebApp.Helpers;

@{
    ViewBag.Navigation = "Calendario de programaciones";
    ViewBag.Title = "Calendario de programaciones";
    var UsuarioActual = DataSession.UserLoggedIn;
}
<!-- Calendar CSS -->
<link href="~/wwwroot/AmpleAdmin/plugins/bower_components/calendar/dist/fullcalendar.css" rel="stylesheet" />
<!-- .row -->
<div class="col-sm-12" id="app">
    <div class="container-fluid">

        <!-- row -->
        <div class="row">
            <div class="col-md-3">
                <div class="white-box">
                    <h3 class="box-title">Programar Mantenimiento de Unidades</h3>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">

                            <div id="calendar-events" class="m-t-20">
                                <div class="calendar-events" data-class="bg-info"><i class="fa fa-circle text-info"></i> Mantenimiento Preventivo 1</div>
                                <div class="calendar-events" data-class="bg-success"><i class="fa fa-circle text-success"></i> Mantenimiento Preventivo 2</div>
                                <div class="calendar-events" data-class="bg-danger"><i class="fa fa-circle text-danger"></i> Mantenimiento Preventivo 3</div>
                                <div class="calendar-events" data-class="bg-warning"><i class="fa fa-circle text-warning"></i> Mantenimiento Preventivo 4</div>
                            </div>
                            <!-- checkbox -->
                            <div class="checkbox">
                                <input id="drop-remove" type="checkbox">
                                <label for="drop-remove">
                                    Quitar después de arrastrar
                                </label>
                            </div>
                            <a href="javascript:void(0)" data-toggle="modal" data-target="#add-new-event" class="btn btn-lg m-t-40 btn-danger btn-block waves-effect waves-light">
                                <i class="ti-plus"></i> Programar Mant. Prev.
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="white-box">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <!-- BEGIN MODAL -->
        <div class="modal fade none-border" id="my-event">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title"><strong>Programar Mantenimiento</strong></h4>
                    </div>
                    <div class="modal-body"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white waves-effect" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-success save-event waves-effect waves-light">Programar Mantenimiento</button>
                        <button type="button" class="btn btn-danger delete-event waves-effect waves-light" data-dismiss="modal">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Add Category -->
        <div class="modal fade none-border" id="add-new-event">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title"><strong>Programar</strong> un mantenimiento</h4>
                    </div>
                    <div class="modal-body">
                        <form role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label">Nombre de Categoría</label>
                                    <input class="form-control form-white" placeholder="Enter name" type="text" name="category-name" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">Escoge</label>
                                    <select class="form-control form-white" data-placeholder="Choose a color..." name="category-color">
                                        <option value="success">Ok</option>
                                        <option value="danger">En aviso</option>
                                        <option value="info">Realizar</option>
                                        <option value="primary">Poco urgente</option>
                                        <option value="warning">Urgente</option>
                                        <option value="inverse">Muy Urgente</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger waves-effect waves-light save-category" data-dismiss="modal">Guardar</button>
                        <button type="button" class="btn btn-white waves-effect" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <label style="display: none;" id="lblcodusuario">@UsuarioActual.Codigo</label><label style="display: none;" id="lbldesusuario">@UsuarioActual.Nombre</label>
</div>



<!-- /.row -->
<!-- .row -->




@section scripts{

    <script src="~/wwwroot/js/Vue/Views/Fallas.js"></script>
    <script>
        $('#mainTable').editableTableWidget().numericInputExample().find('td:first').focus();
        $('#editable-datatable').editableTableWidget().numericInputExample().find('td:first').focus();
        $(document).ready(function () {
            $('#editable-datatable').DataTable();
        });
    </script>
    <!-- Calendar JavaScript -->
    <script src="~/wwwroot/AmpleAdmin/plugins/bower_components/calendar/jquery-ui.min.js"></script>
    <script src="~/wwwroot/AmpleAdmin/plugins/bower_components/moment/moment.js"></script>
    <script src="~/wwwroot/AmpleAdmin/plugins/bower_components/calendar/dist/fullcalendar.min.js"></script>
    <script src="~/wwwroot/AmpleAdmin/plugins/bower_components/calendar/dist/jquery.fullcalendar.js"></script>
    <script src="~/wwwroot/AmpleAdmin/plugins/bower_components/calendar/dist/cal-init.js"></script>
}
