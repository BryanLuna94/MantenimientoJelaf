<!-- sample modal content -->
<div id="appRepuestos" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="app" data-backdrop="static" data-keyboard="false" aria-hidden="true" style="display: none; z-index:1060">
    <div class="modal-dialog modal-lg" style="width:90%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title" id="app">Repuestos por Mantenimiento</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 m-b-4">
                        <div class="col-xs-12 col-md-3" style="padding-left:1px; padding-right:2px;">
                            <div class="form-group m-b-0">
                                <label class="col-md-12 p-0">Descripción:</label>
                                <div class="col-md-12 p-0">
                                    <input class="form-control"
                                           v-model="objRepuesto.Descripcion"
                                           id="Descripcion"
                                           readonly="readonly"
                                           type="text"
                                           ref="Descripcion"
                                           placeholder="Descripción">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-3" style="padding-left:1px; padding-right:2px;">
                            <div class="form-group m-b-0">
                                <label class="col-md-12 p-0">Repuesto:</label>
                                <div class="col-md-12 p-0">
                                    <v-select v-model="objRepuesto.CodRepuesto"
                                              :options="list.Productos"
                                              index="ID_Index"
                                              label="Descripcion"
                                              @@search="ListProductos"
                                              ref="Repuestos"
                                              placeholder="--Seleccione--">
                                    </v-select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-3" style="padding-left:1px; padding-right:2px;">
                            <div class="form-group m-b-0">
                                <label class="col-md-12 p-0">Cantidad:</label>
                                <div class="col-md-12 p-0">
                                    <input class="form-control text-right input-sm"
                                           v-model="objRepuesto.Cantidad"
                                           v-mask="'##'"
                                           id="Cantidad"
                                           ref="Cantidad"
                                           placeholder="Cantidad">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-3" style="padding-left:1px; padding-right:2px;">
                            <div class="form-group m-b-0">
                                <label class="col-md-12 p-0">Orden:</label>
                                <div class="col-md-12 p-0">
                                    <input class="form-control text-right input-sm"
                                           v-model="objRepuesto.Orden"
                                           v-mask="'##'"
                                           id="Orden"
                                           ref="Orden"
                                           placeholder="Orden">
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-12 m-b-4">
                        <div class="white-box">
                            @Html.Partial("_Tarea.Repuesto.Lista")
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnNewRepuesto" class="btn btn-default waves-effect text-left" ref="btnNuevoRepuesto" @@click="newRepuesto()">
                    <span class="fa fa-plus fa-fw"></span>Nuevo
                </button>
                <button id="btnSaveRepuesto" class="btn btn-primary waves-effect text-left" v-bind:disabled="!FullFilterRepuesto" ref="btnSaveRepuesto" @@click="saveRepuesto()">
                    <span class="fa fa-save fa-fw"></span>Aceptar
                </button>
                <button class="btn btn-inverse waves-effect waves-light text-left" @@click="close(3)">
                    <span class="glyphicon glyphicon-log-out fa-fw"></span>Cancelar
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->