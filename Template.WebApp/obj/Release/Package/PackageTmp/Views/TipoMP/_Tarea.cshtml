<!-- sample modal content -->
<div id="appTareas" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="app" data-backdrop="static" data-keyboard="false" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg" style="width:90%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title" id="app">Tareas</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 m-b-4">
                        <div class="col-xs-12 col-md-3" style="padding-left:1px; padding-right:2px;">
                            <div class="form-group m-b-0">
                                <label class="col-md-12 p-0">Descripción:</label>
                                <div class="col-md-12 p-0">
                                    <input class="form-control"
                                           v-model="objTarea.Descripcion"
                                           id="Descripcion"
                                           type="text"
                                           ref="Descripcion"
                                           placeholder="Descripción">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-3" style="padding-left:1px; padding-right:2px;">
                            <div class="form-group m-b-0">
                                <label class="col-md-12 p-0">Sistema:</label>
                                <div class="col-md-12 p-0">
                                    <v-select v-model="objTarea.Sistema"
                                              :options="list.Sistemas"
                                              index="Codigo"
                                              label="Descripcion"
                                              @@search="ListSistemas"
                                              ref="Sistemas"
                                              placeholder="--Seleccione--">
                                    </v-select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-3" style="padding-left:1px; padding-right:2px;">
                            <div class="form-group m-b-0">
                                <label class="col-md-12 p-0">Sub Sistema:</label>
                                <div class="col-md-12 p-0">
                                    <v-select v-model="objTarea.SubSistema"
                                              :options="list.SubSistemas"
                                              index="Codigo"
                                              label="Descripcion"
                                              @@search="ListSubSistemas"
                                              ref="SubSistemas"
                                              placeholder="--Seleccione--">
                                    </v-select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-2" style="padding-left:1px; padding-right:2px;">
                            <div class="form-group m-b-0">
                                <label class="col-md-12 p-0">.</label>
                                <div class="col-md-12 p-0">
                                    <div class="checkbox checkbox-success checkbox-circle">
                                        <input v-model="objTarea.Flg_Revision" id="Flg_Revision" type="checkbox">
                                        <label for="Flg_Revision"> Solo Revisión </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-12 m-b-4">
                        <div class="white-box">
                            @Html.Partial("_Tarea.Lista")
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnNewTarea" class="btn btn-default waves-effect text-left" ref="btnNuevaTarea" @@click="newTarea()">
                    <span class="fa fa-plus fa-fw"></span>Nuevo
                </button>
                <button id="btnSaveTarea" class="btn btn-primary waves-effect text-left" v-bind:disabled="!FullFilterTarea" ref="btnSaveTarea" @@click="saveTarea()">
                    <span class="fa fa-save fa-fw"></span>Aceptar
                </button>
                <button class="btn btn-inverse waves-effect waves-light text-left" @@click="close(2)">
                    <span class="glyphicon glyphicon-log-out fa-fw"></span>Cancelar
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->