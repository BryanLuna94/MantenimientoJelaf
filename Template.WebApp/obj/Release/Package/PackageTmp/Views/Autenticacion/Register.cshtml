@{
    ViewBag.Navigation = "Autenticacion";
    ViewBag.Title = "Regístrate";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="white-box">
    <h3 class="box-title m-b-0">Regístrate en Admin</h3> <small>Introduzca sus datos a continuación</small>
    <form class="form-horizontal new-lg-form" id="loginform" action="@Url.Action("Index", "Home")">
        <div class="form-group ">
            <div class="col-xs-12">
                <input class="form-control" type="text" required="" placeholder="Nombre">
            </div>
        </div>
        <div class="form-group ">
            <div class="col-xs-12">
                <input class="form-control" type="text" required="" placeholder="Email">
            </div>
        </div>
        <div class="form-group ">
            <div class="col-xs-12">
                <input class="form-control" type="password" required="" placeholder="Contraseña">
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <input class="form-control" type="password" required="" placeholder="Confirmar contraseña">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <div class="checkbox checkbox-primary p-t-0">
                    <input id="checkbox-signup" type="checkbox">
                    <label for="checkbox-signup"> Estoy de acuerdo con todos <a href="#">Condiciones</a></label>
                </div>
            </div>
        </div>
        <div class="form-group text-center m-t-20">
            <div class="col-xs-12">
                <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Regístrate</button>
            </div>
        </div>
        <div class="form-group m-b-0">
            <div class="col-sm-12 text-center">
                <p>¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Autenticacion")" class="text-danger m-l-5"><b>Iniciar sesión</b></a></p>
            </div>
        </div>
    </form>
</div>