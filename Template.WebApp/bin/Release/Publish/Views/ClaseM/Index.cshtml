@using Mantenimiento.WebApp.Helpers;

@{
    ViewBag.Navigation = "ClaseM";
    ViewBag.Title = "Clases de Mantenimiento";
    var UsuarioActual = DataSession.UserLoggedIn;
}


<!-- .row -->
<div class="col-sm-12" id="app">
    <div class="col-sm-12">
        <div class="form-horizontal">


            <div class="col-md-12">
                <label id="lblEstadoC" class="hidden">0</label>
                <span id="spaEstadoD" class="label label-info"></span>
            </div>

            <br>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <form class="form-horizontal new-lg-form" id="frmClaseM">
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            <label>Codigo:</label>
                        </div>
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            <input id="txtCodClaseM" type="text" class="form-control" required disabled> <span class="highlight"></span> <span class="bar"></span>
                        </div>
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            <label>Nombre:</label>
                        </div>
                        <div class="col-md-2 col-sm-12 col-xs-12">
                            <div>
                                <input id="txtDescClaseM" type="text" class="form-control" required disabled> <span class="highlight"></span> <span class="bar"></span>
                            </div>
                        </div>
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            <label>Orden:</label>
                        </div>
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            <input id="txtOrdClaseM" type="number" class="form-control" required disabled> <span class="highlight"></span> <span class="bar"></span>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <br><br>
                        </div>
                        <div class="col-md-2 col-sm-12 col-xs-4">
                            <button id="btnNuevo" class="btn btn-info" v-on:click.prevent="Nuevo">Nuevo</button>
                        </div>
                        <div class="col-md-2 col-sm-12 col-xs-4">
                            <button id="btnGrabar" class="btn btn-success" v-on:click.prevent="Grabar" disabled>Grabar</button>
                        </div>
                        <div class="col-md-2 col-sm-12 col-xs-4">
                            <button id="btnCancelar" class="btn btn-warning" v-on:click.prevent="Cancelar">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="white-box p-l-20 p-r-20">
        <div class="col-md-12">
            <form id="search" class="floating-labels">

                <div class="col-md-3 col-sm-4 col-xs-12">
                    <input class="form-control" type="text" id="TxtFiltro1" onkeyup="Filtrar1()" placeholder="Buscar por código.."><span class="highlight"></span> <span class="bar"></span>
                    <span class="glyphicon glyphicon-search form-control-feedback t-0"></span>
                </div>



                <div class="col-md-3 col-sm-4 col-xs-12">
                    <input class="form-control" type="text" id="TxtFiltro2" onkeyup="Filtrar2()" placeholder="Buscar por Nombre.."><span class="highlight"></span> <span class="bar"></span>
                    <span class="glyphicon glyphicon-search form-control-feedback t-0"></span>
                </div>

 
            </form>
        </div>
        <table class="table table-hover" id="tableClaseM" ref="#tableClaseM">
            <thead>
                <tr>
                    <td width="20%">Id Clase</tdwidth="20%">
                    <td width="40%">Clase</td>
                    <td width="20%">Orden</td>
 
                </tr>
            </thead>
            <tbody id="tableClaseMtbody">
                <tr class="header" v-for="ClaseMant in list.ClaseM" :key="list.ClaseM.ID_tb_ClaseM_Mant">
                    <td width="20%">{{ ClaseMant.IdClaseMantenimiento }}</td>
                    <td width="40%">{{ ClaseMant.Descripcion }}</td>
                    <td width="20%">{{ ClaseMant.NroOrden }}</td>
                    <td width="10%">
                        <a href="#" class="btn btn-warning btn-sm" v-on:click.prevent="SelectClaseM(IdClaseMantenimiento)">Editar</a>
                    </td>
                    <td width="10%">
                        <a href="#" class="btn btn-danger btn-sm" v-on:click.prevent="DelClaseM(IdClaseMantenimiento)">Eliminar</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>





<!-- /.row -->
<!-- .row -->




@section scripts{

    <script src="~/wwwroot/js/Vue/Views/ClaseM.js"></script>
}
